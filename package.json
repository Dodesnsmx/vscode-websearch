{
	"name": "vscode-websearch",
	"displayName": "Web Search",
	"description": "Search bar inside vscode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.websearch"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.websearch",
				"title": "Web search"
			}
		]
	},
	"configuration": {
		"title": "Web Search",
		"type": "object",
		"properties": {
			"websearch.engines": {
				"type": "list",
				"default": [
					{
						"Name": "DuckDuckGo",
						"URI": "duckduckgo.com/?q="
					},
					{
						"Name": "Google",
						"URI": "www.google.com/search?q="
					},
					{
						"Name": "Bing",
						"URI": "www.bing.com/search?q="
					}
				],
				"description": "Search engine list and their URIs."
			},
			"websearch.default_engine": {
				"type": "string",
				"default": "DuckDuckGo",
				"description": "The search engine to use."
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}