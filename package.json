{
	"publisher": "TwoUnderscorez",
	"repository": {
		"url": "https://github.com/TwoUnderscorez/vscode-websearch",
		"type": "GitHub"
	},
	"name": "vscode-websearch",
	"displayName": "Web Search",
	"description": "Search bar inside vscode",
	"version": "1.0.4",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other",
		"Keymaps"
	],
	"activationEvents": [
		"onCommand:websearch.search"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "websearch.search",
				"title": "Web search"
			}
		],
		"keybindings": [
			{
				"command": "websearch.search",
				"key": "alt+s",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"title": "Web Search",
			"type": "object",
			"properties": {
				"websearch.engines": {
					"type": "array",
					"default": [
						{
							"Name": "DuckDuckGo",
							"URI": "duckduckgo.com/?q="
						},
						{
							"Name": "Google",
							"URI": "www.google.com/search?q="
						},
						{
							"Name": "Bing",
							"URI": "www.bing.com/search?q="
						}
					],
					"description": "Search engine list and their URIs."
				},
				"websearch.default_engine": {
					"type": "string",
					"default": "DuckDuckGo",
					"description": "The search engine to use.",
					"examples": [
						"DuckDuckGo",
						"Google",
						"Bing"
					]
				},
				"websearch.ac_engine": {
					"type": "string",
					"default": "DuckDuckGo",
					"description": "The AutoComplete engine to use.",
					"enum": [
						"DuckDuckGo",
						"Google"
					]
				},
				"websearch.insert_selected_text": {
					"type": "boolean",
					"default": true,
					"description": "If there is selected text, should that selection be automatically inserted into the search box."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"request": "^2.88.0",
		"request-promise-native": "^1.0.7"
	}
}
